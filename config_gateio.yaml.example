# Gate.io Fair Price Spread Bot Configuration
# TEMPLATE - Copy to config_gateio.yaml and fill in values
# OR use environment variables (recommended)

# Telegram settings (use env vars: TELEGRAM_BOT_TOKEN, TELEGRAM_CHAT_ID)
telegram:
  bot_token: "${TELEGRAM_BOT_TOKEN}"
  chat_id: "${TELEGRAM_CHAT_ID}"

# Spread detection settings
spread:
  min_threshold: 7.0  # Minimum 7% spread to enter (conservative)
  # Blacklist - symbols to never trade (add problematic coins here)
  blacklist:
    - "雪球_USDT"  # Example: problematic coin
    # - "ANOTHER_USDT"  # Add more as needed


# Gate.io API settings (use env vars: GATEIO_API_KEY, GATEIO_API_SECRET)
gateio:
  base_url: "https://api.gateio.ws/api/v4"
  websocket_url: "wss://fx-ws.gateio.ws/v4/ws/usdt"
  api_key: "${GATEIO_API_KEY}"
  api_secret: "${GATEIO_API_SECRET}"

# Trading settings
trading:
  enabled: true
  position_size_usd: 10  # $10 position size @ 20x = $200 volume
  leverage: 20  # Leverage multiplier
  max_positions: 3  # Maximum simultaneous positions
  exit_spread_threshold: 2.0  # Close when spread <= 2% (conservative)
  take_profit_roi: 50.0  # Close 50% of position at +50% ROI, then stop-loss at entry
  
# Monitoring settings
monitoring:
  update_interval: 2  # seconds between checks (for REST API fallback)
  reconnect_delay: 5  # seconds to wait before reconnecting WebSocket
